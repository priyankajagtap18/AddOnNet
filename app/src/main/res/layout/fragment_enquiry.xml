<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/faint_white"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/full_name" />

            <EditText
                android:id="@+id/et_full_name"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/required"
                android:maxLength="50"
                android:maxLines="1" />

            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/email_id" />

            <EditText
                android:id="@+id/et_email"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/required"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1" />

            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/mobile_no" />

            <EditText
                android:id="@+id/et_mobile_no"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/required"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1" />

            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/address" />

            <EditText
                android:id="@+id/et_address"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/required"
                android:maxLength="50"
                android:maxLines="1" />

            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/company_name" />

            <EditText
                android:id="@+id/et_company_name"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/optional"
                android:maxLength="50"
                android:maxLines="1" />
            <TextView
                style="@style/tv_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/enq_description" />

            <EditText
                android:id="@+id/et_description"
                style="@style/tv_faint_black_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/optional"
                android:maxLength="50"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_enquiry"
                style="@style/tv_bg_blue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/enquiry" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>